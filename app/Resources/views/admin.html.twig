<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Freest VOIP{% endblock %}</title>
		{% block stylesheets %}
			<link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}" />
			<link rel="stylesheet" href="{{ asset('css/style.css') }}" />
		{% endblock %}
		<link rel="icon" type="image/x-icon" href="{{ asset('img/logo.png') }}" />
	</head>
    <body>
	<header class="container-fluid bg-primary">
		<div class="row">
			<div class="col-md-1">
				<a href="{{ path('toDoList') }}"><img src="{{ asset('img/logo.png') }}" id="image-admin"></a>
			</div>
			<div class="col-md-11" style="text-align:center;">
				<h6 id="intro-admin">Partie Admin</h6>
			</div>
		</div>
	</header>
	<div id="lateral-bar">
		<div id="lateral-menu">
			<ul>
				<li><a href="{{ path('toDoList') }}">Accueil</a></li>
				<li><a href="{{ path('slider') }}">gérer le slider</a></li>
				<li><a href="{{ path('items') }}">gérer le catalogue</a></li>
				<li><a href="{{ path('categorie') }}">gérer les categories</a></li>
				<li><a href="{{ path('contactAdmin') }}">gérer les contacts</a></li>
				<li><a href="{{ path('commentAdmin') }}">gérer les commentaires</a></li>
				<li><a href="{{ path('newToDoList') }}">ajouter un post-it</a></li>
				<li><a class="nav-item nav-link" href="{{ path('fos_user_security_logout') }}">se déconnecter</a></li>
			</ul>
		</div>
	</div>
	{% block body %}{% endblock %}
	{% block javascripts %}
	<script src="{{ asset('js/Jquery-3.1.1.min.js') }}"></script>
	<script src="{{ asset('js/bootstrap.min.js') }}"></script>
	{% endblock %}
    </body>
</html>
