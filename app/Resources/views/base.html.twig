<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
		<title>{% block title %}VOIP Shop{% endblock %}</title>
		{% block stylesheets %}
			<link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}" />
			<link rel="stylesheet" href="{{ asset('css/style.css') }}" />
		{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('img/logo.png') }}" />
    </head>
    <body>
	<header class="container-fluid bg-primary">
		<div class="row">
			<div class="col-md-12">
				<h6 id="intro"><img src="{{ asset('img/logo.png') }}">Votre partenaire informatique et VOIP</h6>
			</div>
		</div>
	</header>
	<nav class="navbar-dark bg-primary coins container-fluid navbar-inverse">
		{% if not app.user %}
			<a class="nav-item nav-link" style="float:left;color:#fff;margin-right:1%;" href="{{ path('fos_user_security_login') }}">se connecter</a>
			<a class="nav-item nav-link" style="float:left;color:#fff;" href="{{ path('fos_user_registration_register') }}">s'inscrire</a>
			<a class="nav-item nav-link" style="float:left;color:#fff;margin-left: 1%;" href="{{ path('toDoList') }}">Partie Admin</a>
		{% else %}
			<a class="nav-item nav-link" style="float:left;color:#fff;" href="{{ path('fos_user_security_logout') }}">se déconnecter</a>&nbsp; | &nbsp;
			<span>Bonjour {{ app.user }}  |  date de connexion : {{ app.user.lastLogin|date('d-m-Y') }}</span>&nbsp;&nbsp;
		{% endif %}

		<button class="navbar-toggler hidden-sm-up" type="button" data-toggle="collapse" data-target="#exCollapsingNavbar2">
			&#9776;
		</button>
		<div class="collapse navbar-toggleable-xs" id="exCollapsingNavbar2" style="float:right;">
			<ul class="nav navbar-nav">
				<li class="nav-item active">
					<a class="nav-link" href="{{ path('homepage') }}">Accueil<span class="sr-only"></span></a>
				</li>
				<li class="nav-item">
					<a class="nav-link" href="{{ path('about') }}">à propos</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" href="{{ path('repairing') }}">Maintenance</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" href="{{ path('catalogue') }}">Catalogue</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" href="{{ path('VOIP') }}">VOIP</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" href="{{ path('contact') }}">Contact</a>
				</li>
			</ul>
		</div>
	</nav>
	{% block body %}{% endblock %}
	{% block javascripts %}
		<script src="{{ asset('js/jquery.js') }}"></script>
		<script src="{{ asset('js/bootstrap.min.js') }}"></script>
		<script src="{{ asset('js/carousel.js') }}"></script>
	{% endblock %}
    </body>
</html>
