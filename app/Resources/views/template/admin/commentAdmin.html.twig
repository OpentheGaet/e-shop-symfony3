{% extends 'admin.html.twig' %}
{% block body %}
    <div class="container-fluid">
    <div class="row">
        <div class="col-md-9">
            <h3 class="title-admin">GÃ©rer les commentaires</h3>
            <div class="table-responsive table-bordered">
                <table class="table border">
                    <tr>
                        <th>Nom</th>
                        <th>Categories</th>
                        <th>date</th>
                        <th>Commentaire</th>
                        <th>Suppression</th>
                    </tr>
                    {% for p in fetch %}
                        <tr>
                            <td>{{ p.user }}</td>
                            <td>{{ p.getItem().title  }}</td>
                            <td>{{ p.date|date('d-m-Y') }}</td>
                            <td>{{ p.comment }}</td>
                            <td><a href="{{ path('delCommentAdmin',{id:p.id}) }}"><img src="{{ asset('img/delete.png') }}" alt="" class="delete" /></a></td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
            <a href="{{ path('toDoList') }}"><input type="button" class="btn btn-primary back" value="retour"></a>
        </div>
    </div>
{% endblock %}