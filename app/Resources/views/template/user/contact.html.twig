        </div>
    </div>
     <div class="container-fluid">
       <div class="row">
         <div class="col-md-3 col-md-push-1">
                <img src="{{ asset('img/Contact-Img.jpg') }}" id="contact-img">
         </div>
         <div class="col-md-3 col-md-push-3" id="contact-form">
                {{ form(form) }}
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3 col-md-push-2" id="address">
